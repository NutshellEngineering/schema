{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nutshellengineering.github.io/schemas/text/metadata/v1.0/schema.json",
  "title": "TextsMetadata",
  "type": "object",
  "properties": {
    "texts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["title", "author", "description"],
        "additionalProperties": false
      }
    }
  },
  "required": ["texts"],
  "additionalProperties": false
}
